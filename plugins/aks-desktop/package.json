{
  "name": "aks-desktop",
  "version": "0.1.0",
  "description": "AKS Headlamp plugin",
  "scripts": {
    "start": "headlamp-plugin start",
    "build": "headlamp-plugin build",
    "format": "headlamp-plugin format",
    "lint": "headlamp-plugin lint",
    "lint-fix": "headlamp-plugin lint --fix",
    "package": "headlamp-plugin package",
    "tsc": "headlamp-plugin tsc",
    "storybook": "headlamp-plugin storybook",
    "storybook-build": "headlamp-plugin storybook-build",
    "test": "headlamp-plugin test",
    "test:utils": "jest --config test-config/jest/jest.config.utils.js",
    "test:utils:watch": "jest --config test-config/jest/jest.config.utils.js --watch",
    "test:utils:simple": "node src/utils/test/run-tests.js",
    "test:utils:jest": "node src/utils/test/run-tests.js --jest",
    "test:components": "jest --config test-config/jest/jest.config.components.js",
    "prettier": "prettier --write .",
    "test:components:watch": "jest --config test-config/jest/jest.config.components.js --watch",
    "test:components:coverage": "jest --config test-config/jest/jest.config.components.js --coverage",
    "test:rtl": "jest --config test-config/jest/jest.config.rtl.js",
    "test:rtl:watch": "jest --config test-config/jest/jest.config.rtl.js --watch",
    "test:rtl:coverage": "jest --config test-config/jest/jest.config.rtl.js --coverage",
    "test:all": "npm run test:utils && npm run test:components"
  },
  "keywords": [
    "headlamp",
    "aks-headlamp-plugin",
    "kubernetes",
    "kubernetes-ui",
    "kubernetes-debugging",
    "plugins"
  ],
  "prettier": "@headlamp-k8s/eslint-config/prettier-config",
  "eslintConfig": {
    "extends": [
      "@headlamp-k8s",
      "prettier",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "no-barrel-files"
    ],
    "rules": {
      "no-barrel-files/no-barrel-files": "error"
    }
  },
  "overrides": {
    "typescript": "5.6.2",
    "react": "^18.3.1",
    "react-redux": "^8.1.3"
  },
  "devDependencies": {
    "@kinvolk/headlamp-plugin": "^0.12.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.0",
    "babel-jest": "^30.1.2",
    "eslint-plugin-no-barrel-files": "^1.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.52.4",
    "@rollup/rollup-darwin-x64": "^4.52.4",
    "@rollup/rollup-linux-arm64": "^4.50.1",
    "@rollup/rollup-linux-arm64-musl": "^4.52.4",
    "@rollup/rollup-linux-x64": "^4.50.1",
    "@rollup/rollup-linux-x64-musl": "^4.52.3",
    "@rollup/rollup-win32-arm64": "^4.50.1",
    "@rollup/rollup-win32-x64": "^4.50.1",
    "husky": "^9.0.0"
  },
  "dependencies": {
    "@azure/arm-resourcegraph": "^4.2.1",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/identity": "^4.12.0",
    "@octokit/rest": "^22.0.0",
    "recharts": "^3.1.2",
    "yaml": "^2.8.1"
  }
}
